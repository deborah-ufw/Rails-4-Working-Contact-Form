<!-- app/views/contact/_form.html.erb -->

<%= form_for message do |f| %>

  <% if message.errors.any? %>
    <ul>
      <% message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  
  <div>
    <%= f.label :message_subject %><br/>
    <%= f.text_field :message_subject %>
  </div>
  
  <div>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </div>
  
  <div>
    <%= f.submit "Send" %>
  </div>
<% end %>

